<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors' %>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info round") do |f| %>

        <p>
          <%= f.label :title %><br/>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :description %><br/>
          <%= f.text_area :description %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Cancel and return to articles listing ]', articles_path %>
    </div>
  </div>
</div>
