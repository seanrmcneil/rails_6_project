<div id="page-content">
  <h2 class="text-center mt-4"><%= @article.title %></h2>

  <div class="containter">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 rounded bg-white">
          <div class="card-header font-italic">
          by Hollie McNeil
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <%= link_to "Edit", article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>